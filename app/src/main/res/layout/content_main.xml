<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context="com.example.dendimon.scbs.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get contacts"
        android:id="@+id/btnGet"
        android:onClick="displayContacts"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backup"
        android:id="@+id/btnBackup"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restore"
        android:id="@+id/btnRestore"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get SMS"
        android:id="@+id/btnGetSMS"
        android:layout_below="@+id/btnGet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backup"
        android:id="@+id/btnBackupSMS"
        android:layout_alignBottom="@+id/btnGetSMS"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ParseXML"
        android:id="@+id/btnParseXML"
        android:layout_alignBottom="@+id/btnBackupSMS"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Dropbox"
        android:id="@+id/btnAccessDropbox"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/btnGetSMS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="AccessDropbox"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/btnUpDropbox"
        android:layout_marginTop="82dp"
        android:onClick="UpDropbox"
        android:layout_below="@+id/btnAccessDropbox"
        android:layout_alignRight="@+id/btnAccessDropbox"
        android:layout_alignEnd="@+id/btnAccessDropbox" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign_out"
        android:id="@+id/btnOutDropbox"
        android:onClick="SignOut"
        android:layout_alignTop="@+id/btnAccessDropbox"
        android:layout_toRightOf="@+id/btnBackupSMS"
        android:layout_toEndOf="@+id/btnBackupSMS" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:id="@+id/button"
        android:onClick="DownDropbox"
        android:layout_alignTop="@+id/btnUpDropbox"
        android:layout_toLeftOf="@+id/btnRestore"
        android:layout_toStartOf="@+id/btnRestore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testDialog"
        android:layout_toEndOf="@+id/btnOutDropbox"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/btnOutDropbox" />

</RelativeLayout>
